	<section class="section">
		<div class="row">
			<div class="col-lg-12">

				<div class="card">
					<div class="card-body">
						<h5 class="card-title"></h5>

						<form method="post" asp-action="CreateAdmin" enctype="multipart/form-data">


							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Adı</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="Name">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Soyad</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="Surname">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">TC Kimlik Numarası</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="IdentityNumber">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Telefon</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="PhoneNumber">
								</div>
							</div>
							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Kullanıcı Adı</label>
								<div class="col-sm-12">
									<input type="text" class="form-control" asp-for="UserName">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Şifre</label>
								<div class="col-sm-12">
									<input type="password" class="form-control" asp-for="Password">
								</div>
							</div>

							<div class="row mb-3">
								<label class="col-sm-3 col-form-label">Şifre Tekrarı</label>
								<div class="col-sm-12">
									<input type="password" class="form-control" asp-for="ConfirmPassword">
								</div>
							</div>

							
