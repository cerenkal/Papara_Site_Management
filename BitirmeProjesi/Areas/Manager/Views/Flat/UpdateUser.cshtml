@using SiteManagement.UI.Areas.Manager.Models
@model UserCreateModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Daire Sakini Güncelleme Sayfası</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>

                    <form method="post" enctype="multipart/form-data">


                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" asp-for="Email">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Telefon Numaras</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" asp-for="PhoneNumber">
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Araç Plakası</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" asp-for="VehicleRegistrationNumber">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-12" style="display:flex; justify-content:flex-end">
                                <button type="submit" class="btn btn-primary rounded-pill">Güncelle</button>
                            </div>
                        </div>
                    </form><!-- End General Form Elements -->

                </div>
            </div>

        </div>


    </div>
</section>


