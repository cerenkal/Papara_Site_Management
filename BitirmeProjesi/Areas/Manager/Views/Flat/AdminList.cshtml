
@{
    ViewData["Title"] = "AdminList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<h1>AdminList</h1>
<!DOCTYPE html>
<html lang="en">
<body>


    <div class="pagetitle">
        <h1 style="color: azure;">Yöneticiler Listesi</h1>
    </div><!-- End Page Title -->


    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Yöneticiler</h5>

                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"> No</th>
                                <th scope="col"> Adı</th>
                                <th scope="col"> Soyadı</th>
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.user)
                        {
                            counter++;
                            <tbody>
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                </tr>
                            </tbody>
                        }


                    </table>
                    <!-- End Table with stripped rows -->
                    <a href="~/Manager/Flat/CreateAdmin/" class="btn btn-primary">Yönetici Ekle</a>
                </div>
            </div>

        </div>
    </div>






</body>

</html>

