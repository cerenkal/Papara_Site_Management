    <div class="pagetitle">
        <h1>Daire Sakini Olustur</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"></h5>

                        <form method="post" asp-action="CreateUser" enctype="multipart/form-data">


                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Adı</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="Name">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Soyad</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="Surname">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">TC Kimlik Numarası</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="IdentityNumber">
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Araç Plakası</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="VehicleRegistrationNumber">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Telefon</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="PhoneNumber">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Kullanıcı Adı</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="UserName">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Email</label>
                                <div class="col-sm-12">
                                    <input type="email" class="form-control" asp-for="Email">
                                </div>
                            </div>



                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Blok</label>
                                <div class="col-sm-12">
                                    @Html.DropDownListFor(x=>x.Block,Html.GetEnumSelectList<Block>(), new {@class="form-control"})
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Daire Numarası</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" asp-for="DoorNumber">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Daire Sakini Tipi</label>
                                <div class="col-sm-12">
                                    @Html.DropDownListFor(x=>x.Owner,Html.GetEnumSelectList<OwnerStatus>(), new {@class="form-control"})
                                </div>
                            </div>


