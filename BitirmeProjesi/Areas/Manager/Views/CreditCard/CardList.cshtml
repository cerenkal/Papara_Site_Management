@using SiteManagement.Entities
@model CreditCard
@{
    ViewData["Title"] = "CardList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    int counter = 0;
}

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kart Listesi</h5>

                <!-- Table with stripped rows -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> No</th>
                            <th scope="col"> Kredi Kartı No</th>
                            <th scope="col"> Son Kullanma Tarihi</th>
                            <th scope="col"> Güvenlik Numarası</th>
                        </tr>
                    </thead>

                    @foreach (var item in ViewBag.cards)
                    {
                        counter++;
                        <tbody>
                            <tr>
                                <th scope="row">@counter</th>
                                <td>@item.CardNumber</td>
                                <td>@item.ExpirationDate</td>
                                <td>@item.CVV</td>

                            </tr>
                        </tbody>
                    }


                </table>
            </div>
        </div>

    </div>
</div>

