@using SiteManagement.Entities
@using SiteManagement.Entities.Enums
@model Bills
@{
    ViewData["Title"] = "BillsListUser";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    int counter = 0;
}

<body>


    @*<div class="pagetitle">
    <h1 style="color: azure;">Aidat Listesi</h1>
    </div><!-- End Page Title -->
    *@

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Fatura Listesi</h5>

                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"> No</th>
                                <th scope="col"> Tarih</th>
                                <th scope="col"> Tutar</th>
                                <th scope="col"> Durumu</th>
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.bills)
                        {
                            counter++;
                            <tbody>
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@item.Date</td>
                                    <td>@item.Amount</td>
                                    <td>@item.BillStatus</td>
                                    @if (item.BillStatus == BillStatus.NotPaid)
                                    {
                                        <td scope="col"><a href="~/Manager/Bills/PayBills/@item.BillID" class="btn btn-success">Öde</a></td>
                                    }
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>
            </div>

        </div>
    </div>
</body>



